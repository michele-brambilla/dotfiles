# .tcshrc

# colors in terminal
alias ls 'ls --color=auto'
alias grep 'grep --color=auto'
alias fgrep 'fgrep --color=auto'
alias egrep 'egrep --color=auto'
alias yum 'yum --color=auto'

# safe rm
alias rm="rm -i"

# add user defined modules
module use $HOME/work/Modules


##### prompt ######

# Colors!
set     red="%{\033[1;31m%}"
set   green="%{\033[0;32m%}"
set  yellow="%{\033[1;33m%}"
set    blue="%{\033[1;34m%}"
set magenta="%{\033[1;35m%}"
set    cyan="%{\033[1;36m%}"
set   white="%{\033[0;37m%}"
set     end="%{\033[0m%}" # This is needed at the end... :(

alias precmd 'source ~/.tcsh/precmd.tcsh'
